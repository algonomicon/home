<div class="home">
  <div class="categories">
    <div class="wrapper">
      <div class="list">
        <a href="/" class="active">All</a>
        <% @categories.each do |category| %>
          <%= link_to category.title, category %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="showcase">
    <div class="wrapper">
      <div class="primary">
        <div class="papers">
          <% @papers.each do |paper| %>
            <a class="item" href="<%= paper_path(paper.id) %>">
              <h2 class="title"><%= paper.title %> (<%= paper.publish_date.strftime('%Y') %>)</h2>
              <p class="description"><%= paper.abstract.truncate(300, separator: ' ') %></p>

              <div class="meta">
                <span><i class="far fa-clock"></i> <%= paper.created_at.strftime('%b %d') %></span>
                <span><i class="far fa-folder"></i> <%= paper.category.title %></span>
              </div>
            </a>
          <% end %>
          <%= paginate @papers %>
        </div>
      </div>

      <div class="secondary">
        <div class="events">
          <h3 class="heading">Events</h3>
          <% @events.first(10).each do |event| %>
            <a class="item" target="_blank" href="<%= event.link %>">
              <h3 class="title"><%= event.title %></h3>
              <div class="meta">
                <time class="timestamp"><%= event.schedule %></time>
                <p class="location"><%= event.location %></p>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
