<div class="papers-index">
  <div class="categories">
    <div class="wrapper">
      <div class="list">
        <a href="/">Home</a>
        <a href="/articles">Articles</a>
        <a href="/datasets">Datasets</a>
        <a href="/events">Events</a>
        <a class="active" href="/papers">Papers</a>
        <a href="/projects">Projects</a>
      </div>
    </div>  
  </div>

  <div class="showcase">
    <div class="wrapper">
      <% @papers.each do |paper| %>
        <a class="item" href="<%= paper_path(paper.slug) %>">
          <h2 class="title"><%= paper.title %> (<%= paper.publish_date.strftime('%Y') %>)</h2>
          <p class="description"><%= paper.abstract.truncate(300, separator: ' ') %></p>

          <div class="meta">
            <span><i class="far fa-clock"></i> <%= paper.created_at.strftime('%b %d') %></span>
            <span><i class="far fa-folder"></i></span>
          </div>
        </a>
      <% end %>
      <%= paginate @papers %>
    </div>
  </div>
</div>